    echo -e "$OKRED RUNNING JEXBOSS $RESET"
    echo -e "${OKGREEN}====================================================================================${RESET}"
    python /usr/share/sniper/plugins/jexboss/jexboss.py -u http://$TARGET
  fi

  if [ $SCAN_TYPE == "DOMAIN" ] && [ $OSINT == "1" ]; then
