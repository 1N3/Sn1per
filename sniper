    args="$args -b"
  fi
  if [ "$FULLNMAPSCAN" = "1" ]; then
    args="$args -f"
  fi
  if [ "$RECON" = "1" ]; then
    args="$args -re"
  fi
  if [ "MODE" = "port" ]; then
    args="$args -m port"
  fi
